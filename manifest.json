{
  "manifest_version": 3,

  "version": "1.0.1",
  "name": "MPG Goals",
  "description": "Pre-calculate MPG goals.",

  "content_scripts": [{
    "matches": [ "https://mpg.football/mpg-match/league/mpg_division_*/mpg_division_match_*" ],
    "js": ["addMpgGoals.js"],
    "run_at": "document_end"
  }],
  "permissions": ["activeTab"]
}